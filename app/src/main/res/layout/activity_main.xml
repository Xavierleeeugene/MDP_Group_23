<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000ffff"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/www"
        android:scaleType="fitXY"/>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:minHeight="?actionBarSize"
        android:background="@color/transparent"
        android:padding="@dimen/appbar_padding"
        android:text="@string/app_name"
        android:textColor="@color/colorBlack"
        android:textSize="23sp"
        android:textStyle="bold" />

        <ImageButton
            android:id="@+id/bluetoothButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="110dp"
            android:foregroundGravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="fitXY" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="430dp"
        android:layout_height="430dp"
        android:orientation="horizontal">
        <view
            android:id="@+id/mapView"
            class="com.example.mdp_grp_23.GridMap"
            android:layout_width="match_parent"
            android:layout_height="430dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="430dp"
        android:layout_marginStart= "7dp"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:id="@+id/bluetoothConnection"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/statusbar"
        android:gravity="center"
        android:text="BLUETOOTH"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans_semibold"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        app:drawableLeftCompat="@mipmap/left"
        app:drawableRightCompat="@mipmap/right" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_black">

        <TextView
            android:id="@+id/bluetoothStatus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/bluetooth_connection"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@android:color/holo_red_dark"/>

        <TextView
            android:id="@+id/bluetoothConnectedDevice"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Connected Device"
            android:fontFamily="@font/open_sans_semibold"
            android:textAlignment="center"
            android:textColor="@color/black"/>
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="ROBOT STATUS"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/statusbar"
            app:drawableLeftCompat="@mipmap/left"
            app:drawableRightCompat="@mipmap/right" />

        <TextView
            android:id="@+id/robotStatus"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border_black"
            android:gravity="center"
            android:text="Ready to Start"
            android:textAlignment="center"

            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/directionLabel"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="DIRECTION"
            android:gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/statusbar"
            app:drawableLeftCompat="@mipmap/left"
            app:drawableRightCompat="@mipmap/right" />

        <TextView
            android:id="@+id/directionAxisTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/border_black"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="None"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/CoordsLabel"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="COORDINATES"
            android:gravity="center"
            android:textAlignment="center"
            android:drawableLeft="@mipmap/left"
            android:drawableRight="@mipmap/right"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/statusbar" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:background="@drawable/border_black">

            <TextView
                android:id="@+id/robotX"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingStart="20dp"
                android:textAlignment="center"
                android:text="X:"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/xAxisTextView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingStart="10dp"
                android:text="0"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/robotY"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginStart="2dp"
                android:paddingStart="20dp"
                android:textAlignment="center"
                android:text="Y:"
                android:fontFamily="@font/open_sans_semibold"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/yAxisTextView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingStart="10dp"
                android:text="0"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabGravity="center"
                        app:tabMode="scrollable"
                        app:tabMinWidth="130dp"
                        app:tabIndicatorGravity="stretch"
                        app:tabSelectedTextColor="@color/colorBlack"
                        app:tabRippleColor="@null"
                        app:tabIndicatorColor="@null"
                        app:tabIndicatorAnimationMode="elastic"
                        app:tabIndicator="@drawable/tab_selected"/>

                </androidx.viewpager.widget.ViewPager>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"

                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/upBtn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:foreground="@drawable/arrow_up_faced_state"
                            android:background="@color/transparent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                        <ImageButton
                            android:id="@+id/leftBtn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:foreground="@drawable/arrow_left_faced_state"
                            android:background="@color/transparent"/>
                        <TextView
                            android:id="@+id/RoundCircle"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/circular_button" />
                        <ImageButton
                            android:id="@+id/rightBtn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="15dp"
                            android:foreground="@drawable/arrow_right_faced_state"
                            android:background="@color/transparent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageButton
                            android:id="@+id/downBtn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:foreground="@drawable/arrow_down_faced_state"
                            android:background="@color/transparent" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="40dp"
                        android:src="@mipmap/toothless_cute_kids" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>